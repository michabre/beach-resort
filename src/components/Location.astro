// Location

import * as data from '../data/rates.md'

const content = data.compiledContent()

import Map from "./Map"

---
<section id="location" class="p-5">
  <div class="container">
    <div class="columns">
      <div class="column is-half">
        <h2 class="is-size-2">Where to Find Us</h2>
        <ul>
          <li>Purok 6, Sitio Sapa, 6340 Philippines</li>
          <li>bolodbeachresort@yahoo.com.ph</li>
          <li>+63 920 603 9927</li>
        </ul>
      </div>
      <div class="column is-half">
        <div class="image is-4by3 map-wrapper">
          <div class="map-component"><Map /></div>
        </div>
      </div>
    </div>
  </div>
</section>
<style>
  .map-wrapper {
    background-color: aliceblue;
    position: relative;
  }
  .map-component {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }

</style>
