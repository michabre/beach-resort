---
// Hero
import Button from '../Button/Button'
import { FaArrowDown } from 'react-icons/fa';
import * as data from '../../data/hero.md'

const title = data.frontmatter.title
const tagline = data.frontmatter.tagline
const button = data.frontmatter.button
---
<section class="hero is-medium is-link" >
  <div class="columns m-2 is-justify-content-center is-align-content-center">
    <div class="column is-three-fifths text-content has-text-centered">
      <h2 class="title has-text-black">
        {title}
      </h2>
      <h3 class="subtitle has-text-black">
        {tagline}
      </h3>
      <a href="#book-now" class="button is-black is-large mb-5">{button} <FaArrowDown /></a>
    </div>
  </div>

  <div class="is-flex is-justify-content-end is-align-items-center my-2 mx-3" style="z-index:10;">
    <span class="is-size-5 has-text-black has-text-weight-semibold mr-4">Read about us on</span>
    <Button text="TripAdvisor" icon="tripAdvisor" type="is-link is-success" action={()=>{}} url="https://www.tripadvisor.com/Hotel_Review-g294258-d2512880-Reviews-Bolod_Beach_Resort-Visayas_Panglao_Island.html?m=66412#photos" client:idle />
  </div>
          
</section>
<style>
  .hero {
    height: 100vh;
    background: #fff url('./img/friends.jpg') no-repeat top left;
    background-size: cover;
    position: relative;
  }
  .hero:before {
    content:'';
    position: absolute;
    top: 0;
    left: 0;
    background: rgba(255,255,255,0.6);
    width: 100%;
    height: 100%;
    z-index: 9;
  }

  .hero > .columns {
    height: 100%;
    z-index: 10;
    display: flex;
    align-items: center;
  }
  .hero .title {
    font-family: "Allura", cursive;
    font-size: 8rem;
    line-height: 6rem;
    margin-bottom: 2.5rem;
  }
  .hero .subtitle {
    font-family: 'Roboto', sans-serif;
    font-size: 2rem;
    font-style: italic;

  }

  .text-content {
    z-index: 29;
  }
</style>
