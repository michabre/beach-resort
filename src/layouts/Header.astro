---
// Header
import * as data from '../data/navigation.md';

import Button from "../components/Button/Button.jsx";
import NavBarItem from "../components/NavBarItem.jsx"

const title = data.frontmatter.title
const logo = data.frontmatter.logo
const headerLinks = data.frontmatter.links

function handleOnClick() {
  console.log('Hello, Astro!');
}
---
<nav class="navbar is-transparent is-fixed-top">
  <div class="navbar-brand">
    <!-- <a class="navbar-item" href="/">
      <img src={logo} alt="" width="86" height="60">
    </a> -->
    <div class="navbar-burger" data-target="navbarExampleTransparentExample">
      <span></span>
      <span></span>
      <span></span>
    </div>
  </div>

  <div id="navbarExampleTransparentExample" class="navbar-menu">
    <div class="navbar-start">
      <h1><a href="/">{title}</a></h1>
    </div>

    <div class="navbar-end">
      {headerLinks.map((item:any) => <NavBarItem title={item.title} url={item.url} />)}

      <div class="navbar-item">
        <div class="field is-grouped">
          <p class="control">
            <Button text="Call" icon="phone" type="is-link is-outlined" action={handleOnClick} url="tel:+639206039927" client:idle />
          </p>
        </div>
      </div>
      <div class="navbar-item">
        <div class="field is-grouped">
          <p class="control">
            <Button text="Book Now" icon="clock" type="is-link" action={handleOnClick} url="#book-now" client:idle />
          </p>
        </div>
      </div>
    </div>
  </div>
</nav>
<style>
  h1 a {
    font-family: "Kavoon", cursive;
    font-size: 2rem;
    font-weight: 900;
    color: #000;
  }
  .navbar {
    background: transparent;
    margin: 1rem;
  }
  .navbar .navbar-item {
    font-size: 1rem;
    color: #000 !important;
    font-weight: bold;
  }
  .navbar-item img {
    max-height: none;
}
</style>
